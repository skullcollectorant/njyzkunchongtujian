			    commonness: 4
			},
			
			
			
			
				
        ];

        // 昆虫目分类（初始数量为0，将在初始化时计算）
        const orders = [
            { name: "鞘翅目", icon: "dragon", count: 0, desc: "甲虫类昆虫，前翅为角质鞘翅" },
            { name: "鳞翅目", icon: "butterfly", count: 0, desc: "蝴蝶和蛾类，翅膀覆盖鳞片" },
            { name: "膜翅目", icon: "bee", count: 0, desc: "蜂类和蚁类，具有膜质翅膀" },
            { name: "双翅目", icon: "mosquito", count: 0, desc: "蚊、蝇、虻等，只有一对翅膀和平衡棒" },
            { name: "半翅目", icon: "bug", count: 0, desc: "蝉、蚜虫、椿象等，刺吸式口器" },
            { name: "直翅目", icon: "locust", count: 0, desc: "蝗虫、蟋蟀、螽斯等" },
            { name: "蜻蜓目", icon: "dragonfly", count: 0, desc: "蜻蜓和豆娘等" },
            { name: "螳螂目", icon: "praying-hands", count: 0, desc: "螳螂，捕食性昆虫" },
            { name: "蜚蠊目", icon: "cockroach", count: 0, desc: "蟑螂，适应性强" },
            { name: "等翅目", icon: "termite", count: 0, desc: "白蚁，社会性昆虫" },
            { name: "革翅目", icon: "earwig", count: 0, desc: "蠼螋，尾端有尾铗" },
            { name: "脉翅目", icon: "lacewing", count: 0, desc: "草蛉、蚁蛉等，捕食性昆虫" }
        ];

        // DOM 元素
        const randomView = document.getElementById('random-view');
        const taxonomyView = document.getElementById('taxonomy-view');
        const randomLink = document.getElementById('random-link');
        const taxonomyLink = document.getElementById('taxonomy-link');
        const randomInsects = document.getElementById('random-insects');
        const taxonomyGrid = document.getElementById('taxonomy-grid');
        const loadMoreBtn = document.getElementById('load-more');
        const insectCount = document.getElementById('insect-count');
        const orderCount = document.getElementById('order-count');
        const familyCount = document.getElementById('family-count');

        // 状态管理
        let currentMode = 'random'; // 'random' 或 'order'
        let currentOrder = null;
        let displayedOrderInsects = [];

        // 初始化函数：计算每个目的昆虫数量
        function calculateOrderCounts() {
            orders.forEach(order => {
                order.count = insects.filter(insect => 
                    insect.taxonomy.order.includes(order.name)
                ).length;
            });
        }

        // 计算统计信息
        function calculateStatistics() {
            // 昆虫种类总数
            insectCount.textContent = insects.length;
            
            // 实际存在的目数量
            const activeOrders = orders.filter(order => order.count > 0);
            orderCount.textContent = activeOrders.length;
            
            // 科数量
            const families = new Set();
            insects.forEach(insect => families.add(insect.taxonomy.family));
            familyCount.textContent = families.size;
        }

        // 显示随机昆虫卡片
        function displayRandomInsects(count) {
            for (let i = 0; i < count; i++) {
                const insect = getRandomInsect();
                const insectCard = createInsectCard(insect);
                randomInsects.appendChild(insectCard);
                
                // 添加淡入动画
                setTimeout(() => {
                    insectCard.classList.add('fade-in');
                }, 100);
            }
        }

        // 获取随机昆虫
        function getRandomInsect() {
            return insects[Math.floor(Math.random() * insects.length)];
        }

        // 创建昆虫卡片
        function createInsectCard(insect) {
            const card = document.createElement('div');
            card.className = 'insect-card';
            card.innerHTML = `
                <div class="insect-img-container">
                    <img src="${insect.image}" alt="${insect.name}" class="insect-img">
                </div>
                <div class="insect-info">
                    <h3>${insect.name}</h3>
                    <p class="insect-latin">${insect.latin}</p>
                    
                    <div class="taxonomy-details">
                        <p><span>界:</span>${insect.taxonomy.kingdom}</p>
                        <p><span>门:</span>${insect.taxonomy.phylum}</p>
                        <p><span>纲:</span>${insect.taxonomy.class}</p>
                        <p><span>目:</span>${insect.taxonomy.order}</p>
                        <p><span>科:</span>${insect.taxonomy.family}</p>
                    </div>
                    
                    <div class="location-info">
                        <div class="location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>${insect.location}</span>
                        </div>
                        <div class="commonness">
                            ${renderStars(insect.commonness)}
                        </div>
                    </div>
                </div>
            `;
            return card;
        }

        // 渲染星级评分
        function renderStars(rating) {
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                if (i <= Math.floor(rating)) {
                    stars += '<i class="fas fa-star"></i>';
                } else if (i - 0.5 <= rating) {
                    stars += '<i class="fas fa-star-half-alt"></i>';
                } else {
                    stars += '<i class="far fa-star"></i>';
                }
            }
            return stars;
        }

        // 显示分类学网格
        function displayTaxonomyGrid() {
            taxonomyGrid.innerHTML = '';
            orders.forEach(order => {
                // 只显示有昆虫的目
                if (order.count === 0) return;
                
                const card = document.createElement('div');
                card.className = 'taxonomy-card';
                card.innerHTML = `
                    <div class="taxonomy-icon">
                        <i class="fas fa-${order.icon}"></i>
                    </div>
                    <div class="taxonomy-info">
                        <h3>${order.name}</h3>
                        <p class="insect-count">${order.count}种昆虫</p>
                        <p>${order.desc}</p>
                    </div>
                `;
                taxonomyGrid.appendChild(card);
                
                // 添加点击事件
                card.addEventListener('click', () => {
                    filterInsectsByOrder(order.name);
                });
            });
        }

        // 按目筛选昆虫
        function filterInsectsByOrder(orderName) {
            // 更新状态
            currentMode = 'order';
            currentOrder = orderName;
            
            // 切换到随机浏览视图
            showView(randomView);
            randomLink.classList.add('active');
            taxonomyLink.classList.remove('active');
            
            // 清空现有昆虫
            randomInsects.innerHTML = '';
            
            // 筛选该目的昆虫
            displayedOrderInsects = insects.filter(insect => 
                insect.taxonomy.order.includes(orderName)
            );
            
            if (displayedOrderInsects.length === 0) {
                randomInsects.innerHTML = `<div class="no-insects">未找到${orderName}的昆虫记录</div>`;
                loadMoreBtn.classList.add('no-more-btn');
                loadMoreBtn.textContent = "没有更多内容";
                loadMoreBtn.disabled = true;
                return;
            }
            
            // 显示前4个昆虫
            const toShow = Math.min(4, displayedOrderInsects.length);
            for (let i = 0; i < toShow; i++) {
                const insectCard = createInsectCard(displayedOrderInsects[i]);
                randomInsects.appendChild(insectCard);
            }
            
            // 更新标题
            document.querySelector('#random-view .section-title h2').textContent = `${orderName}昆虫 (${displayedOrderInsects.length}种)`;
            
            // 更新加载更多按钮
            if (displayedOrderInsects.length <= 4) {
                loadMoreBtn.classList.add('no-more-btn');
                loadMoreBtn.textContent = "没有更多内容";
                loadMoreBtn.disabled = true;
            } else {
                loadMoreBtn.classList.remove('no-more-btn');
                loadMoreBtn.textContent = "加载更多昆虫";
                loadMoreBtn.disabled = false;
            }
        }

        // 加载更多昆虫
        function loadMoreInsects() {
            if (currentMode === 'random') {
                // 随机模式：加载随机昆虫
                displayRandomInsects(3);
            } else if (currentMode === 'order') {
                // 分类模式：加载当前目的更多昆虫
                const currentCount = randomInsects.children.length;
                const remaining = displayedOrderInsects.length - currentCount;
                
                if (remaining <= 0) {
                    loadMoreBtn.classList.add('no-more-btn');
                    loadMoreBtn.textContent = "没有更多内容";
                    loadMoreBtn.disabled = true;
                    return;
                }
                
                const toShow = Math.min(3, remaining);
                for (let i = currentCount; i < currentCount + toShow; i++) {
                    const insectCard = createInsectCard(displayedOrderInsects[i]);
                    randomInsects.appendChild(insectCard);
                    
                    // 添加淡入动画
                    setTimeout(() => {
                        insectCard.classList.add('fade-in');
                    }, 100);
                }
                
                // 检查是否还有更多
                if (randomInsects.children.length >= displayedOrderInsects.length) {
                    loadMoreBtn.classList.add('no-more-btn');
                    loadMoreBtn.textContent = "没有更多内容";
                    loadMoreBtn.disabled = true;
                }
            }
        }

        // 视图切换
        function showView(view) {
            randomView.style.display = 'none';
            taxonomyView.style.display = 'none';
            
            view.style.display = 'block';
        }

        randomLink.addEventListener('click', (e) => {
            e.preventDefault();
            showView(randomView);
            randomLink.classList.add('active');
            taxonomyLink.classList.remove('active');
            
            // 重置状态
            currentMode = 'random';
            currentOrder = null;
            
            // 更新标题
            document.querySelector('#random-view .section-title h2').textContent = '随机浏览';
            
            // 重置加载更多按钮
            loadMoreBtn.classList.remove('no-more-btn');
            loadMoreBtn.textContent = "加载更多昆虫";
            loadMoreBtn.disabled = false;
        });

        taxonomyLink.addEventListener('click', (e) => {
            e.preventDefault();
            showView(taxonomyView);
            taxonomyLink.classList.add('active');
            randomLink.classList.remove('active');
        });

        // 加载更多按钮
        loadMoreBtn.addEventListener('click', () => {
            loadMoreInsects();
        });

        // 初始化页面
        calculateOrderCounts();
        calculateStatistics();
        displayRandomInsects(4);
        displayTaxonomyGrid();
        showView(randomView);
    </script>
</body>
</html>
